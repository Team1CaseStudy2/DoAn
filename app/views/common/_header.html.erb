<div class="navbar navbar-expand-lg" id="navbarText">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"><i class="fas fa-bars" style="color:#fff; font-size:28px;"></i></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <li class="nav-item">
        <%= link_to 'Trang Chủ', root_path , {class: 'nav-link'}%>
      </li>
      <li class="nav-item">
        <%= link_to 'New', products_path(pro: "New") , {class: 'nav-link'}%>
      </li>
      <li class="nav-item">
        <%= link_to 'Sản Phẩm', products_path , {class: 'nav-link'}%>
      </li>
      <li class="nav-item">
        <div class="dropdown">
          <div id="navbarDropdownMenuLink">
            <%= link_to 'Nam ', products_path(sex: "Nam") , class:"nav-link dropdown-toggle"%>
          </div>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%@category1.each do |cate|%>
              <%= link_to cate.name, products_path(category_id: cate.id, name: cate.name, sex: "Nam"), {class: 'dropdown-item'}%>
            <%end%>
          </div>
        </div>
      </li>
      <li class="nav-item">
        <div class="dropdown">
          <div id="navbarDropdownMenuLink">
            <%= link_to 'Nữ ', products_path(sex: "Nữ") , class:"nav-link dropdown-toggle"%>
          </div>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%@category2.each do |cate|%>
              <%= link_to cate.name, products_path(category_id: cate.id, name: cate.name, sex: "Nữ"), {class: 'dropdown-item'}%>
            <%end%>
          </div>
        </div>
      </li>
      <li class="nav-item">
        <%= link_to 'Sale', products_path(pro: "Sale") , {class: 'nav-link'}%>
      </li>
    </ul>
  </div>
  <form class="form-inline my-2 my-lg-0">
    <form class="form-inline d-flex justify-content-center md-form form-sm ">
      <input id="tags" class="form-control form-control-sm mr-3 col-md-auto" type="text" aria-label="Search" size=40 style="width: 100%; margin-bottom:10px; margin-top:10px" >
      <%# <i class="fas fa-search" aria-hidden="true"></i> %>
    </form>
    <div class="nav-item" style="margin-top:-29px">
      <%= link_to image_tag("cart_.png", class: 'img_cart'), @cart %>
      <div class="dropdown">
        <div id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
          <div id="add_to_cart" class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink" style="display:none; background-color:#fff; width:200px; height:50px; border: 2px solid #000;text-align:center; margin-top:20px; margin-left:-30px; ">
            <i class="fas fa-check-circle" style="color:rgb(102, 255, 0);"></i>
            <span class="align-middle" >
              "Thêm thành công!"  
            </span>
          </div>
          <div class= "rounded-circle">
            <div id="cart" 
                <% if @cart.nil?%>
                    0
                <% end %>
                  >
              <% unless @cart.nil?%>
                <%= @cart.line_items.count%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%if user_signed_in?%>
      <div class="dropdown">
        <div id="navbarDropdownMenuLink">
          <%= form_for current_user, url: users_update_info_path, html: { method: :put } do |f|%>
            <% if current_user.avatar.file.nil? %>
              <%= image_tag("acount.png", class:"img  img-thumbnail")%>
            <%else%>
              <%= image_tag(current_user.avatar, class:"img  img-thumbnail ")%>
            <%end%>
          <%end%>
        </div>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
          <%= link_to 'Tài Khoản', users_profile_path, class: 'dropdown-item'%>
          <%= link_to 'Đơn Hàng', orders_path, class: 'dropdown-item'%>
          <div class="dropdown-divider"></div>
          <%= link_to 'Đăng Xuất', destroy_user_session_path, method: :delete , class: 'dropdown-item'%>
        </div>
      </div>
    <%else%>
      <%= link_to 'Đăng Nhập', new_user_session_path, class: 'nav-link' ,style: 'margin-top:5px; white-space: nowrap;'%>
    <%end%>
  </form>
</div>