<head>
  <link rel="stylesheet" href="/assets/signin-up.scss" />
</head>
<body class = "bg-img">
  <div class="container ">
    <div class="d-flex justify-content-center h-100">
      <div class="card" style="width:800px;">
        <div class="card-header">
          <h3>Đổi Mật Khẩu <%= resource_name.to_s.humanize %></h3>
        </div>
        <div class="card-body" >
          <div class="d-flex justify-content-center h-100" style="color:rgb(255, 196, 0); font-size:18px">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <div class="field">
                <%= f.label :email%><br />
                <%= f.text_field :email, readonly: 'readonly' ,style:"width:400px; background-color:rgb(192, 187, 187);",class:'rounded'%>
              </div>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
              <div class="field">
                <%= f.label :password  ,'Nhập Mật Khẩu Mới'%> <em> (ít nhất <%= @minimum_password_length %> kí tự )</em><br />
                <%= f.password_field :password, autocomplete: "new-password" ,style:"width:400px;",class:'rounded'%>
              </div>
              <div class="invalid-feedback d-block">
                  <% if resource.errors.any? %>
                    <% resource.errors.full_messages.each do |message| %>
                      <% if message == "Password can't be blank" %>
                        Vui lòng nhập mật khẩu mới.
                      <% end %>
                       <% if message == "Password is too short (minimum is 6 characters)" %>
                        Vui lòng nhập hơn 6 kí tự.
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              <div class="field">
                <%= f.label :password_confirmation  ,'Nhập Lại Mật Khẩu Mới'%><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" ,style:"width:400px;",class:'rounded'%>
              </div>
               <div class="invalid-feedback d-block">
                  <% if resource.errors.any? %>
                    <% resource.errors.full_messages.each do |message| %>
                      <% if message == "Password confirmation doesn't match Password" %>
                        Vui lòng nhập trùng mật khẩu mới.
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              <div class="field">
                <%= f.label :current_password ,'Mật Khẩu Củ' %> <br />
                <%= f.password_field :current_password, autocomplete: "current-password" ,style:"width:400px;",class:'rounded'%>
              </div>
              <div class="invalid-feedback d-block">
                  <% if resource.errors.any? %>
                    <% resource.errors.full_messages.each do |message| %>
                      <% if message == "Current password can't be blank" %>
                        Vui lòng nhập mật khẩu.
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              <div class="actions" >
                <%= f.submit "Cập Nhật",class:'rounded' ,style:"border:0px; float:right; margin:30px 2px ;padding: 0px 30px ;background-color:rgb(255, 196, 0);"%>
              </div>
            <% end %>
          </div>
        </div>
        <!--
<h3>Cancel my account</h3>
<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>4
-->
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</body>