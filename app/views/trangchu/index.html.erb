<!doctype html>
<html lang="en">

<head>
  <%= csrf_meta_tags %>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <!-- SCSS -->
  <%= stylesheet_link_tag 'trangchu', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'trangchu', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <%@news.each_with_index do |val, index|%>
        <li data-target="#carouselExampleIndicators" data-slide-to= '<%= index %>' class="<%= "active" if index.zero?%>"></li>
      <%end%>
    </ol>
    <div class="carousel-inner">
      <%@news.each_with_index do |val, index|%>
        <% if index.zero? %>
          <div class="carousel-item active">
            <%=link_to(image_tag(val.hinhanhtintuc , class:"d-block w-100", alt: val.tieude), sanphams_path) if val.hinhanhtintuc.present? and !File.file?(val.hinhanhtintuc)%>
          </div>
          <div class="carousel-caption">
            <h1><%val.tieude%></h1>
            <p><%val.mota%></p>
          </div>
        <%else%>
          <div class="carousel-item">
            <%=link_to(image_tag(val.hinhanhtintuc, class:"d-block w-100", alt: val.tieude), sanphams_path) if val.hinhanhtintuc.present? and !File.file?(val.hinhanhtintuc) %>
          </div>
          <div class="carousel-caption">
            <p><%val.tieude%></p>
          </div>
        <%end%>
      <%end%>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div id="menu">
    <div class="title">
      
      <br>
      Sản phẩm 
    </div>
  </div>
  <div class="container-fluid col-md-10">
    <div class="row"  id="sort_paginate_ajax">
      <%= render partial: "DS_Sanpham" %>
    </div>
  </div>
</body>
</html>