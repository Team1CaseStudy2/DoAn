<!doctype html>
<html lang="en">
  <head>
    <%= csrf_meta_tags %>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- SCSS -->
    <%= stylesheet_link_tag 'trangchu', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'trangchu', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="menu">
      <div class="title">
        Sản phẩm
      </div>
    </div>
    <div class = "container-fluid col-md-10">
      <div class="row">
        <%@product.each do |product|%>
        <div class="col-xs-6 col-sm-3 col-md-3">
          <div class = "pitem">
            <%@product_details = Sanpham.includes(:chitietsps).where(masanpham: product.masanpham).last%>
            <%=link_to (image_tag @product_details.chitietsps.last.hinhanhsp ,class: "img-fluid"), sanpham_path(@product_details, mau: @product_details.chitietsps.last.mausp)%>
            <div class="row mt-2">
              <div class="col-12 col-sm-12 font-weight-bold">
                <%=link_to product.tensanpham, sanpham_path(@product_details, mau: @product_details.chitietsps.last.mausp)%>
              </div>
              <div class="col-12 col-sm-12">
                <p class="price">
                  <%if product.giakhuyenmai.nil? || product.giakhuyenmai == 0 %>
                    <span><%= product.giaban %></span>
                  <%else%>
                    <span style="text-decoration:line-through"><%=product.giaban %></span>
                    <span style="color:#ff0000"><%=product.giakhuyenmai%></span>
                  <%end%>
                </p> 
              </div>
            </div>
            <div class="row mt-4">
              <div class = "col-12 col-sm-12">
                <!-- all image details for product class = "image_border" -->
              </div>
            </div>
          </div>
        </div>
        <%end%>
      </div>
    </div>
  </body>
</html>