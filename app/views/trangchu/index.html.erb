<!doctype html>
<html lang="en">

<head>
  <%= csrf_meta_tags %>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <!-- SCSS -->
  <%= stylesheet_link_tag 'trangchu', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'trangchu', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <%@news.each_with_index do |val, index|%>
        <li data-target="#carouselExampleIndicators" data-slide-to= '<%= index %>' class="<%= "active" if index.zero?%>"></li>
      <%end%>
    </ol>
    <div class="carousel-inner">
      <%@news.each_with_index do |val, index|%>
        <% if index.zero? %>
          <div class="carousel-item active">
            <%=link_to(image_tag(val.hinhanhtintuc , class:"d-block w-100", alt: val.tieude), sanphams_path) if val.hinhanhtintuc.present? and !File.file?(val.hinhanhtintuc)%>
          </div>
          <div class="carousel-caption">
            <h1><%val.tieude%></h1>
            <p><%val.mota%></p>
          </div>
        <%else%>
          <div class="carousel-item">
            <%=link_to(image_tag(val.hinhanhtintuc, class:"d-block w-100", alt: val.tieude), sanphams_path) if val.hinhanhtintuc.present? and !File.file?(val.hinhanhtintuc) %>
          </div>
          <div class="carousel-caption">
            <p><%val.tieude%></p>
          </div>
        <%end%>
      <%end%>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div id="menu">
    <div class="title">
      <%=link_to "Cart", cart_path%>
      <br>
      Sản phẩm 
    </div>
  </div>
  <div class="container-fluid col-md-10">
    <div class="row">
      <%@products.each do |product|%>
      <div class="col-xs-6 col-sm-3 col-md-3">
        <div class="pitem">
          <!-- Show product by image -->
          <%@product_details = Sanpham.includes(:chitietsps).where(masanpham: product.masanpham).last%>
          <%=link_to (image_tag @product_details.chitietsps.last.hinhanhsp ,class: "img-fluid d-block w-100"), sanpham_path(@product_details, color: @product_details.chitietsps.last.mausp)%>
          <!-- all image details for product class = "image_border" -->
          <div class="row mt-2">
            <div class="col-12 col-sm-12">
              <%product_details_all = Chitietsp.where(sanpham_id: product.masanpham)%>
              <%hash_image = {}%>
              <%product_details_all.each do |details_of_product|%>
              <%hash_image[details_of_product.mausp] = details_of_product.hinhanhsp%>
              <%end%>
              <%hash_image.each do |key, values|%>
                <div class="pull-left circular">
                  <%= link_to ( image_tag values, class: "small_image_color"),sanpham_path(@product_details, color: key)%>
                </div>
              <%end%>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-12 col-sm-12 font-weight-bold">
              <%=link_to product.tensanpham, sanpham_path(@product_details, color: @product_details.chitietsps.last.mausp), class: "fw-normal"%>
            </div>
            <div class="col-12 col-sm-12">
              <p class="price">
                <%if product.giakhuyenmai.nil? || product.giakhuyenmai == 0 %>
                <span><%= number_to_currency(product.giaban, precision: 0, unit: "", delimiter: ".", format: "%n %u")%><sup style="font-style: unset;">đ</sup></span>
                <%else%>
                <span style="text-decoration:line-through"><%= number_to_currency(product.giaban, precision: 0, unit: "", delimiter: ".", format: "%n %u")%><sup style="font-style: unset;">đ</sup></span>
                <span style="color:#ff0000"><%= number_to_currency(product.giakhuyenmai, precision: 0, unit: "", delimiter: ".", format: "%n %u")%><sup style="font-style: unset;">đ</sup></span>
                <%end%>
              </p>
            </div>
          </div>
        </div>
      </div>
      <%end%>
    </div>
  </div>
</body>
</html>